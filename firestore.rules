rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Audit collections - users can create their own audit entries
    match /audit_user_actions/{docId} {
      allow create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || resource.data.userId == 'anonymous');
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    match /audit_file_processing/{docId} {
      allow create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || resource.data.userId == 'anonymous');
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    match /audit_xml_generation/{docId} {
      allow create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || resource.data.userId == 'anonymous');
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    match /audit_data_access/{docId} {
      allow create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || resource.data.userId == 'anonymous');
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Allow anonymous audit entries
    match /{collection}/{docId} {
      allow create: if collection in ['audit_user_actions', 'audit_file_processing', 'audit_xml_generation'] &&
        resource.data.userId == 'anonymous';
    }
  }
}
